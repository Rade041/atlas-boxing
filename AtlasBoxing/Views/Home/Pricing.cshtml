@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Boxing Classes</h1>

<br />

<style>
    .pricing-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        margin: 0 auto;
        max-width: 1000px;
    }

    .pricing-card {
        flex: 1 1 calc(50% - 10px);
        box-sizing: border-box;
        margin: 10px 0;
    }

    .card-container {
        border-radius: 9px;
        background-color: #f9d9d9;
        display: flex;
        margin-top: 22px;
        flex-direction: column;
        padding: 0 20px 41px;
        width: 100%;
    }

    .card-header {
        font-family: Inter, sans-serif;
        border-radius: 8px;
        background-color: #d9d9d9;
        z-index: 10;
        margin-top: -22px;
        font-weight: 700;
        white-space: nowrap;
        justify-content: center;
        padding: 14px 15px;
        display: flex;
        align-items: center;
        text-align: center;
    }

    .card-description {
        text-align: center;
        font-family: Inter, sans-serif;
        font-weight: 400;
        align-self: center;
        margin-top: 11px;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
        font-size: 2.5em;
    }
</style>

<body>
    <!-- Main container for the pricing cards -->
    <div class="pricing-grid">
        <!-- Card 1: Pricing information for "17 & Under" -->
        <div class="pricing-card">
            <div class="card-container">
                <div class="card-header">
                    17 & Under
                </div>
                <div class="card-description">
                    PAYG: £4
                    <br />
                    Monthly: £25
                </div>
            </div>
        </div>

        <!-- Card 2: Pricing information for "18+" -->
        <div class="pricing-card">
            <div class="card-container">
                <div class="card-header">
                    18+
                </div>
                <div class="card-description">
                    PAYG: £5.50
                    <br />
                    Monthly: £35
                </div>
            </div>
        </div>

        <!-- Card 3: Pricing information for "Registered Boxers" -->
        <div class="pricing-card">
            <div class="card-container">
                <div class="card-header">
                    Registered Boxers
                </div>
                <div class="card-description">
                    PAYG: £5.50
                    <br />
                    Monthly: £25
                </div>
            </div>
        </div>

        <!-- Card 4: Pricing information for "Students" -->
        <div class="pricing-card">
            <div class="card-container">
                <div class="card-header">
                    Students
                    <br />
                    (with valid ID)
                </div>
                <div class="card-description">
                    PAYG: £5.50
                    <br />
                    Monthly: £30
                </div>
            </div>
        </div>
    </div>
</body>
