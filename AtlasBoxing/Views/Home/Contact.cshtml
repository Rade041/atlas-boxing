@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main aria-labelledby="title">
    <h2 id="title" style="text-align: center;">@ViewBag.Title</h2>
    <br />
    <h3 style="text-align: center;">@ViewBag.Message</h3>
    <br />

    <!-- Wrapper for both the address and form containers -->
    <div class="address-form-container">
        <!-- Address Section -->
        <div class="address-container">
            <address>
                <b>Address</b>
                <br />
                65a Chesterfield Road
                <br />
                Leicester
                LE5 5LH
                <br />
                <b>Contact Us</b>
                <br />
                <b>Phone: 0739992263</b>
                <br />
                <strong>Email:</strong>
                <a href="mailto:atlasboxing@yahoo.com">atlasboxing@yahoo.com</a>
                <br />
            </address>
            <div class="map-container">
                <!-- Embedded Google Map -->
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2421.7859808422827!2d-1.105286623364437!3d52.627711572089545!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487761be8af9107f%3A0xa1147fe147d02d85!2sAtlas%20Boxing%20%26%20Fitness%20Club!5e0!3m2!1sen!2suk!4v1724839710931!5m2!1sen!2suk"
                        style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>

        <!-- Contact Form with Centering and Box -->
        <div class="form-container">
            <h3>Send Us a Message</h3>
            <form method="post" action="@Url.Action("SendMessage", "Home")">
                <div class="form-group">
                    <label for="name">Your Name:</label>
                    <input type="text" id="name" name="Name" required class="form-input" />
                </div>
                <br />
                <div class="form-group">
                    <label for="email">Your Email:</label>
                    <input type="email" id="email" name="Email" required class="form-input" />
                </div>
                <br />
                <div class="form-group">
                    <label for="message">Your Message:</label>
                    <textarea id="message" name="Message" rows="5" required class="form-input"></textarea>
                </div>
                <br />
                <button type="submit">Send Message</button>
            </form>
        </div>
    </div>
</main>

<style>
    /* Main wrapper for centering the content */
    .address-form-container {
        display: flex;
        justify-content: center; /* Centers horizontally */
        align-items: flex-start; /* Aligns containers at the top */
        flex-wrap: wrap; /* Allows wrapping of the containers on smaller screens */
        min-height: 100vh;
        padding: 20px;
        box-sizing: border-box;
    }

    /* Address, Map, and Form Container Styles */
    .address-container,
    .form-container {
        width: 100%; /* Default to full width for smaller screens */
        max-width: 500px; /* Set a max width for larger screens */
        margin: 0 10px; /* Adds space between the two containers */
        box-sizing: border-box;
    }

    /* Responsive Map Container */
    .map-container {
        width: 100%;
        aspect-ratio: 16 / 9; /* Maintain a 16:9 aspect ratio */
        position: relative;
        margin-top: 20px; /* Space above the map */
    }


        .map-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }

    /* Form styling */
    .form-container {
        padding: 20px;
        border: 2px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

    .form-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

</style>